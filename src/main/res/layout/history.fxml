<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.saddleback.tictactoe.view.HistoryView">
    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="468.0" prefWidth="600.0" spacing="10.0">
            <children>
                <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="468.0" prefWidth="144.0">
                    <children>
                        <Label text="Game History">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ListView fx:id="gameTable" maxHeight="-Infinity" minHeight="-Infinity" onMouseClicked="#onGameClicked" prefHeight="348.0" prefWidth="93.0" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="367.0" prefWidth="151.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="Winner: " />
                                        <Label fx:id="winnerLabel" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="Loser: " />
                                        <Label fx:id="loserLabel" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <TableView fx:id="moveTable" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="348.0" prefWidth="150.0">
                            <columns>
                                <TableColumn editable="false" prefWidth="96.0" resizable="false" text="Move Number" />
                                <TableColumn editable="false" prefWidth="54.0" resizable="false" text="Move" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
        <Button fx:id="lobbyButton" mnemonicParsing="false" onMouseClicked="#onLobbyClicked" text="Return" />
    </children>
</VBox>
